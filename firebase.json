{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1",
      "secrets": [
        "SERVICE_ACCOUNT_EMAIL",
        "SERVICE_ACCOUNT_PRIVATE_KEY"
      ]
    }
  },
  
  "firestore": {
    "database": "(default)",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": [
    {
      "bucket": "realmsrpg-test.firebasestorage.app",
      "rules": "storage.rules"
    }
  ],
  "database": {
    "rules": "database.rules.json"
  }
}
